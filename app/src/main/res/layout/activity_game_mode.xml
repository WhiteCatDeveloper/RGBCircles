<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.GameModeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите сложность:"/>

        <Button
            android:id="@+id/buttonPlayEasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Легко"
            android:onClick="onClickEasyMode"/>

        <Button
            android:id="@+id/buttonPlayMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Средне"
            android:onClick="onClickMediumMode"/>

        <Button
            android:id="@+id/buttonPlayHard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сложно"
            android:onClick="onClickHardMode"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>